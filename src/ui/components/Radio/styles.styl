@import '../../stylus/colors'

.group
	display: inline-flex
	align-items: center

.input
	margin: 0 3px 0 0
	width: 14px
	height: 14px
	outline: 0
	vertical-align: middle

	&:checked
		& + label
			&:after
				background-color: $DARK + 40%
				opacity: 1

			&:before
				border: 1px solid $DARK + 40%

	&:not(checked)
		position: absolute
		opacity: 0

		& + label
			position: relative
			padding: 2px 0 0 25px

			&:before
				position: absolute
				top: 1px
				left: 0
				width: 16px
				height: 16px
				border: 1px solid $DARK + 40%
				border-radius: 50%
				content: ''

			&:after
				position: absolute
				top: 5px
				left: 4px
				width: 10px
				height: 10px
				border-radius: 50%
				content: ''
				opacity: 0
				transition: all .2s

.label
	cursor: pointer
	user-select: none

.title
	position: relative
	top: 3px

.dark
	&:checked
		& + label
			&:after
				background-color: $DARK
				opacity: 1

			&:before
				border: 1px solid $DARK

.red
	&:checked
		& + label
			&:after
				background-color: $RED

			&:before
				border: 1px solid $RED

.green
	&:checked
		& + label
			&:after
				background-color: $GREEN

			&:before
				border: 1px solid $GREEN

.yellow
	&:checked
		& + label
			&:after
				background-color: $YELLOW

			&:before
				border: 1px solid $YELLOW
