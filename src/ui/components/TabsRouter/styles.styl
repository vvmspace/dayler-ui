@import '../../stylus/colors'

$BACKGROUND = #FFFFFF
$HEADER-BORDER = #DDDDDD
$LINK-ACTIVE = #202020
$LINK-DEFAULT = #909090

.router
	width: 800px
	border-radius: 2px
	background-color: $BACKGROUND
	box-shadow: 0 2px 7px 0 rgba(0, 0, 0, .17)

.header
	position: relative
	display: flex
	justify-content: flex-start
	align-items: flex-end
	padding: 0 20px
	height: 60px
	border-bottom: 2px solid $HEADER-BORDER
	user-select: none

.body
	padding: 30px

.link
	position: relative
	top: 2px
	display: block
	padding: 15px 10px
	min-width: 80px
	color: $LINK-DEFAULT
	text-align: center
	text-decoration: none
	text-transform: uppercase
	font-size: .9em

.active
	color: $LINK-ACTIVE

.border
	position: absolute
	bottom: -2px
	left: 35px
	display: block
	width: 80px
	height: 2px
	background-color: RED
	transition: left .2s ease, width .1s ease
