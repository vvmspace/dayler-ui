$HEADER-BACKGROUND = #F9F9F9
$HEADER-BORDER = #E0E0E0
$HEADER-COLOR = #B0B0B0
$PANEL-BACKGROUND = #FFFFFF

.panel
	border-radius: 2px
	background-color: $PANEL-BACKGROUND
	box-shadow: 0 2px 7px 0 rgba(0, 0, 0, .17)

.header
	display: flex
	align-items: center
	padding: 0 20px
	height: 36px
	border-bottom: 1px solid $HEADER-BORDER
	background-color: $HEADER-BACKGROUND

.body
	padding: 20px 20px 18px
	border-radius: 2px

.icon
	position: relative
	top: 2px
	margin-right: 10px
	color: $HEADER-COLOR

.title
	position: relative
	top: 1px
	color: $HEADER-COLOR
	text-transform: uppercase
	font-size: .9em
	font-weight: 400
