.wrapper
	width: 0
	height: 0

	& > *
		user-select: none

.shadow
	position: absolute
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 0
	z-index: 100
	display: flex
	justify-content: center
	align-items: center
	width: 100%
	height: 100%
	outline: 1px solid green
	background-color: rgba(0, 0, 0, .6)

.container
	top: 100px
	display: grid
	border-radius: 2px
	background-color: #FFFFFF
	box-shadow: 0 2px 7px 0 rgba(0, 0, 0, .17)

.source
	&-container
		display: flex
		justify-content: center
		align-items: center
		border-top-left-radius: 2px
		border-bottom-left-radius: 2px
		background-color: #AAAAAA

	&-image
		width: auto
		user-select: none
		user-drag: none
		-webkit-transform: translateZ(0)
		-webkit-perspective: 1000
		-webkit-backface-visibility: hidden

height auto, .preview
	display: flex
	flex-direction: column
	padding: 35px 25px
	box-shadow: -2px 0 3px 0 rgba(0, 0, 0, .17)

.title
	display: block
	margin-bottom: 35px
	font-weight: 400
	font-size: 26px

.avatars
	flex-grow: 1
