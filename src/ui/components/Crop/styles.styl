dot() {
	background-color #FFF
	width 5px
	height 5px
	padding 0
	margin 0
	position absolute
}

.wrapper
	width: 0
	height: 0

	& > *
		user-select: none

.shadow
	position: absolute
	position: absolute
	top: 0
	right: 0
	bottom: 0
	left: 0
	z-index: 100
	display: flex
	justify-content: center
	align-items: center
	width: 100%
	height: 100%
	outline: 1px solid green
	background-color: rgba(0, 0, 0, .6)
	display none

.avatars
	flex-grow: 1

.container
	top: 100px
	display: grid
	border-radius: 2px
	background-color: #FFFFFF
	box-shadow: 0 2px 7px 0 rgba(0, 0, 0, .17)

.preview
	display: flex
	flex-direction: column
	padding: 35px 25px
	box-shadow: -2px 0 3px 0 rgba(0, 0, 0, .17)

.title
	display: block
	margin-bottom: 35px
	font-weight: 400
	font-size: 26px

.span
	&-wrapper
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		background-color transparent
		cursor move
		outline 1px solid #FFF

.crop
	&-area
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		background-color rgba(0, 0, 0, .3)

.caret
	width 200px
	height 200px
	position absolute
	top 0
	left 0
	// top 10px
	// left 10px

	&-circle
		overflow hidden
		border-radius 50%
		width 100%
		height 100%
		left 0
		top 0
		position absolute

	&-border
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		background-color transparent
		cursor move
		outline 1px dashed #FFF

	&-image
		user-select: none;
		-webkit-user-drag: none;
		transform: translateZ(0px);
		perspective: 1000px;
		backface-visibility: hidden;
		// margin-left: -10px;
		// margin-top: -10px;

	&-tL
		dot()

		top -3px
		left -3px
		cursor: nw-resize

	&-tR
		dot()

		top -3px
		right -3px
		cursor: ne-resize


	&-bL
		dot()

		bottom -3px
		left -3px
		cursor: sw-resize

	&-bR
		dot()

		bottom -3px
		right -3px
		cursor: se-resize

.source
	&-container
		display: flex
		justify-content: center
		align-items: center
		border-top-left-radius: 2px
		border-bottom-left-radius: 2px
		background-color: #AAAAAA
		position relative

	&-image
		width: auto
		user-select: none
		user-drag: none
		-webkit-transform: translateZ(0)
		-webkit-perspective: 1000
		-webkit-backface-visibility: hidden
