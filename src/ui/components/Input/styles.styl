@import '../../stylus/colors'
@import '../../stylus/mixins/placeholder'

.group
    display flex
    flex-direction column

.input
    placeholder(#4E4E4E)
    font-family 'Myriad Pro'
    width 100%
    outline 0
    border 0
    background-color DEFAULT - 5%
    padding 3px 12px 0
    font-size 14px
    border-radius 2px
    height 32px
    vertical-align bottom
    color #111111

    &:focus
        placeholder(transparent)

.white
    background-color #FFF

.label
    margin-left 1px
    margin-bottom 2px
    color #777777
