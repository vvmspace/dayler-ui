@import '~ui/stylus/mixins/animate'
@import '~ui/stylus/base.styl'

$NAV_EXAPNDED = 280px
$NAV_UNEXAPNDED = 80px

body, html
	min-width: 1024px
	height: 100%
	color #333

pre
	font-size: 12px

h1, h2, h3, h4, h5
	font-family: 'Myriad Pro', 'PT Sans', arial, sans-serif
	line-height 1.5
	font-weight normal

h1
	font-size 32px

h2
	font-size 28px

h3
	font-size 22px

h4
	font-size 20px

h5
	font-size 18px

a
	text-decoration: none

p
	color: #666
	font-size: 14px
	line-height: 20px

hr
	display: block
	width: 100%
	height: 1px
	outline: 0
	border: 0
	background-color: #efefef

:global(.root)
	min-width: 100%
	height: 100%

.app
	min-height: 100%
	width: 100%
	background-color: #f8f8f8

.app-expanded
	& .route
		padding-left: $NAV_EXAPNDED + 30px

.route
	fadeIn(.2s)

	padding: 25px 30px 0 $NAV_UNEXAPNDED + 30px
	transition: padding-left .1s ease-in-out

	&-header
		display: flex
		height: 55px

	&-body
		display: grid
		max-width: 800px

	&-title
		color: #555
		margin-left 3px
