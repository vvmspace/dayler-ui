@import url('https://fonts.googleapis.com/css?family=PT+Sans:400,400i,700,700i&subset=cyrillic')
@import '~ui/stylus/mixins/animate'
@import '~ui/stylus/base.styl'

$NAV_EXAPNDED = 280px
$NAV_UNEXAPNDED = 80px
$BACKGROUND-COLOR = #F8F8F8
$ROUTE-TITLE-COLOR = #666666

*
	font-family: 'PT Sans', sans-serif

body, html
	min-width: 1024px
	height: 100%
	font-family: 'PT Sans', sans-serif

:global(.root)
	min-width: 100%
	height: 100%

.app
	min-height: 100%
	width: 100%
	background-color: $BACKGROUND-COLOR

.app-expanded
	& .route
		padding-left: $NAV_EXAPNDED + 30px

.route
	fadeIn(.2s)

	padding: 25px 30px 0 $NAV_UNEXAPNDED + 30px
	transition: padding-left .1s ease-in-out

	&-header
		display: flex
		height: 55px

	&-body
		display: grid
		max-width: 800px

	&-title
		color: $ROUTE-TITLE-COLOR
		font-weight: 700
		font-size: 24px
		line-height: 24px
