@import '../../mixins/animate'
@import '../../mixins/media'
@import '../colors'
@import '../variables'

vertical()
	.container, .expanded
		fadeInDown(.3s)

		top 0
		width 100%
		height $nav-header-height

	.icon
		display none

	.header
		display flex
		justify-content space-between
		z-index 10
		position relative
		background-color #fff

	.logo
		background-position right 26px
		display block
		margin-right 20px

	.menu-icon
		display block

	.body
		position relative
		background-color #fff
		top -999px
		transition top .1s ease-in-out
		z-index 9

	.isNavigationShown
		top 0

.container
	fadeInLeft(.3s)

	background-color #fff
	box-shadow: 0 2px 7px 0 rgba(0, 0, 0, .17)
	position fixed
	z-index 10
	width $nav-width-min
	height 100%

.expanded
	width $nav-width-max

	.logo
		display block

.header
	display flex
	height $nav-header-height
	border-bottom 1px solid #eee
	align-items center

.action
	width $nav-width-min
	height $nav-header-height
	display flex
	align-items center
	justify-content center
	cursor pointer

.menu-icon
	display none
	cursor pointer

.logo
	background-image url('https://cdn.dayler.io/images/logo_dark.svg')
	background-size 100px
	background-repeat no-repeat
	background-position left 26px
	width 180px
	height 100px
	display none

.body
	padding: 5px 0

+media-tablet()
	vertical()

+media-mobile()
	vertical()
