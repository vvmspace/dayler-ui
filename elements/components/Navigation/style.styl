.container
	background-color #c30

@import '../../mixins/animate'
@import '../../mixins/media'
@import '../colors'
@import '../variables'

.container
	fadeInLeft(.3s)

	background-color #fff
	box-shadow: 0 2px 7px 0 rgba(0, 0, 0, .17)
	position fixed
	z-index 10
	width $nav-width-min
	height 100%

.expanded
	width $nav-width-max

	.logo
		display block

.header
	display flex
	height $nav-header-height
	border-bottom 1px solid #eee
	align-items center

.action
	width $nav-width-min
	height $nav-header-height
	display flex
	align-items center
	justify-content center
	cursor pointer

.logo
	background-image url('https://cdn.dayler.io/images/logo_dark.svg')
	background-size 100px
	background-repeat no-repeat
	background-position left 26px
	width 180px
	height 100px
	display none

.body
	padding: 5px 0

+media-tablet()
	.action
		display none

	.logo
		background-image url('../../../src/assets/d_ayler_small.svg')
		background-position center center
		background-size 30px
		width 100px
		display block

	.expanded
		width $nav-width-min
