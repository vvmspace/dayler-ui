@import '../../colors'

@keyframes buttonRippleAnimation
	100%
		opacity 0
		transform scale(2.5)

.button
	align-items center
	background-color $default - 5%
	border 0
	border-radius 2px
	color #000
	cursor pointer
	display inline-flex
	font-family 'Noto Sans', sans-serif
	font-size 12px
	height 32px
	justify-content center
	min-width 85px
	outline 0
	overflow hidden
	padding 0 18px
	position relative
	text-decoration none
	text-transform uppercase
	vertical-align top

	&:disabled
		background-color $default + 15%
		color #666
		cursor default

	&-icon
		line-height 18px
		min-width 45px

		& .title
			margin-left 5px

.animate
	animation buttonRippleAnimation .4s linear

.loading
	position absolute

.hidden
	visibility hidden

.ripple
	background-color $default - 10%
	border-radius 100%
	position absolute
	transform scale(0)

.title
	position relative
	text-decoration none
	z-index 2

.icon
	align-items center
	display flex
	font-size 10px
	position relative
	z-index 2

.dark
	background-color $dark
	color #fff

	&hover
		background-color $dark + 10%

	&:disabled
		background-color $dark + 35%
		color #fff

	& > .ripple
		background-color $dark + 25%

.red
	background-color $red
	color #fff

	&hover
		background-color $red + 10%

	&:disabled
		background-color $red + 25%
		color #fff

	& > .ripple
		background-color $red + 25%

.green
	background-color $green
	color #fff

	&hover
		background-color $green + 10%

	&:disabled
		background-color $green + 25%
		color #fff

	& > .ripple
		background-color $green + 25%

.yellow
	background-color $yellow
	color #fff

	&hover
		background-color $yellow + 10%

	&:disabled
		background-color $yellow + 25%
		color #fff

	& > .ripple
		background-color $yellow + 25%
